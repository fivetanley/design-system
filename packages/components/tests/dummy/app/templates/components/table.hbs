{{page-title "Table Component"}}

<Hds::Table @model={{this.model}}>
  <:head>
    <Hds::Table::Row>
      <Hds::Table::Header @field="Artist" />
      <Hds::Table::Header @field="Album" />
      <Hds::Table::Header @field="Release Year" />
    </Hds::Table::Row>
  </:head>
  <:body as |data|>
    <Hds::Table::Row>
      <td>{{data.artist}}</td>
      <td>{{data.album}}</td>
      <td>{{data.year}}</td>
    </Hds::Table::Row>
  </:body>
</Hds::Table>